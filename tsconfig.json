{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": "./",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": [
		"dist",
		"node_modules"
	],
	"ts-node": {
		"files": true,
		"transpileOnly": true
	}
}