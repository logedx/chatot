{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"skipLibCheck": true,
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": "./",
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": [
		"dist",
		"node_modules",
	],
	"ts-node": {
		"files": true,
		"transpileOnly": true
	}
}